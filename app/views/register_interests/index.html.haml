.card
  .card-header.d-flex.align-items-center
    %span Listing Register Interests

    = link_to 'New Register interest', new_register_interest_path, class: 'btn btn-outline-secondary ms-auto'

  %table.table
    %thead
      %tr
        %th Email
        %th
    %tbody
      - @register_interests.each do |register_interest|
        %tr
          %td= register_interest.email
          %td
            .btn-toolbar.float-end
              = link_to 'Show', register_interest, class: 'btn btn-outline-secondary btn-sm'
              = link_to 'Edit', edit_register_interest_path(register_interest), class: 'btn btn-outline-secondary ms-1 btn-sm'
              = link_to 'Destroy', register_interest, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger ms-1 btn-sm'