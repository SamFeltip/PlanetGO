.row.justify-content-center
  .col-sm-8.col-lg-6
    .card
      .card-header
        %h1 Sign up now
      .card-body
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = f.error_notification
          .form-inputs
            = f.input :full_name, required: true, wrapper_html: { class: "pb-3" } |
            = f.input :email, required: true, autofocus: true, input_html: { value: params[:email], autocomplete: "email"}, wrapper_html: { class: "pb-3" }
            = f.input :postcode, autofocus: true, wrapper_html: { class: "pb-3" }
            = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password" }, wrapper_html: { class: "pb-3" }                                                       |
            = f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password" }, wrapper_html: { class: "pb-3" }
            = f.hidden_field :invite_token, value: @outing.invite_token if @outing
          .form-actions
            = f.button :submit, "Sign up", class: "btn btn-dark"
      .card-footer
        = render "devise/shared/links"
