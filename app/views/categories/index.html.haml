.card
  .card-header.d-flex.align-items-center
    %span Listing Categories

    = link_to 'New Category', new_category_path, class: 'btn btn-outline-secondary ms-auto'

  %table.table
    %thead
      %tr
        %th Name
    %tbody
      - @categories.each do |category|
        %tr
          %td= category.name
          %td
            .btn-toolbar.float-end
              = link_to 'Show', category, class: 'btn btn-outline-secondary btn-sm'
              = link_to 'Edit', edit_category_path(category), class: 'btn btn-outline-secondary ms-1 btn-sm'
              = link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger ms-1 btn-sm'