.card
  .card-header.d-flex.align-items-center
    %span Listing Category Interests

  %table.table
    %thead
      %tr
        %th Event Category
        %th Actions
    %tbody
      - @category_interests.each do |category_interest|
        %tr
          %td= Category.find(category_interest.category_id).name
          %td
            .row

              .col
                = link_to like_category_interest_path(category_interest), method: :put, class: 'approve_event btn' + (category_interest.interest == 1 ? " btn-primary" : " btn-outline-primary") do
                  %i.bi-hand-thumbs-up

              .col
                = link_to dislike_category_interest_path(category_interest), method: :put, class: 'disapprove_event btn' + (category_interest.interest == -1 ? " btn-outline-danger" : " btn-danger") do
                  %i.bi-hand-thumbs-down