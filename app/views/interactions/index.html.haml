.card
  .card-header.d-flex.align-items-center
    %span Listing Interactions

    = link_to 'New Interaction', new_interaction_path, class: 'btn btn-outline-secondary ms-auto'

  %table.table
    %thead
      %tr
        %th Logged in
        %th Start visit
        %th Lattitude
        %th Longitude
        %th Start splashscreen
        %th Time on splashscreen
        %th Num interactions on splashscreen
        %th
    %tbody
      - @interactions.each do |interaction|
        %tr
          %td= interaction.logged_in
          %td= interaction.start_visit
          %td= interaction.lattitude
          %td= interaction.longitude
          %td= interaction.start_splashscreen
          %td= interaction.time_on_splashscreen
          %td= interaction.num_interactions_on_splashscreen
          %td
            .btn-toolbar.float-end
              = link_to 'Show', interaction, class: 'btn btn-outline-secondary btn-sm'
              = link_to 'Edit', edit_interaction_path(interaction), class: 'btn btn-outline-secondary ms-1 btn-sm'
              = link_to 'Destroy', interaction, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger ms-1 btn-sm'