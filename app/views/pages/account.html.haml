#account
  %h1 Account
  .card
    .card-header.d-flex
      Account details
    .card-body
      %h2
        = current_user.full_name
      %p
        = current_user.email

.row
  .col-md-3.mt-4
    %h1 Friends
    - @friends.each do |friend|
      %p= friend
  .col-md-9.mt-4
    %h1 My outings

    #future_outings.py-3
      %h2 Future Outings
      - @future_outings.each do |outing|
        .mb-3.card[outing]
          .card-header.d-flex
            %strong= outing.name
          .card-body
            %p
              = outing.description
            %p
              = outing.creator
          .card-footer.d-flex

            = link_to outing_path(outing), class: 'btn btn-link ms-auto', title: 'Edit this outing' do
              %i.bi-map

            = link_to outing_path(outing), class: 'btn btn-link text-danger', method: :delete, title: 'Delete outing', data: { confirm: 'Are you sure you want to delete this outing?' } do
              %i.bi-trash

    #past_outings.py-3
      %h2 Past Outings
      - @past_outings.each do |outing|
        .mb-3.card[outing]
          .card-header.d-flex
            %strong= outing.name
          .card-body
            %p
              = outing.description
            %p
              = outing.creator
          .card-footer.d-flex
            = link_to outing_path(outing), class: 'btn btn-link ms-auto', title: 'Edit this outing' do
              %i.bi-map

            = link_to outing_path(outing), class: 'btn btn-link text-danger', method: :delete, title: 'Delete outing', data: { confirm: 'Are you sure you want to delete this outing?' } do
              %i.bi-trash


-##past_outings= render "outing", collection: @outings_past

