.row.justify-content-center
  .col-sm-8.col-lg-6
    .card
      .card-header
        Review details
      .card-body
        %dl.row.mb-0
          %dt.col-md-3 Body:
          %dd.col-md-9= @review.body
      .card-footer.d-flex
        = link_to 'Edit', edit_review_path(@review), class: 'btn btn-link'
        = link_to 'Back', reviews_path, class: 'btn btn-link ms-auto'