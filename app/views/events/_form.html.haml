-# frozen_string_literal: true
= simple_form_for(@event) do |f|
  .card-body
    = f.input :name, label: "Event Name", wrapper_html: { class: 'mb-3' }
    = f.input :time_of_event, label: "Time and Date", wrapper_html: { class: 'mb-3' }, html5: true
    = f.input :description, wrapper_html: { class: 'mb-3' }
    = f.input :category, collection: Event.categories.keys, wrapper_html: { class: 'mb-3' }
    = f.input :approved, wrapper_html: { class: 'mb-3' }
    - if locals[:edit] && current_user.admin? && !(@event.user == current_user)
      .row
        .col
          = f.input :user, label: "Creator", disabled: true
        - unless @event.approved.nil?
          .col
            = f.input :approved


  .card-footer.d-flex
    %button.btn.btn-primary{ type: 'submit' }
      Save

    - if locals[:edit]
      %a{href: event_path(@event), method: :delete, data: { confirm: 'Are you sure you want to delete this event?' }, class: 'red ms-auto' }
        %i.bi-trash.lg-icon



