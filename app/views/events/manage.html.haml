

= render "registering_events"



.card
  .card-body

    = form_with url: event_search_path, id: 'event-search-form', class: 'mb-2', local: false, method: :get do |f|

      = text_field_tag :description

      %button.btn.btn-outline-secondary{:type => "submit", :name => "search"}
        %i.bi-search

    #searched-events




.card
  .card-header.d-flex.align-items-center
    %span Listing Events

    = link_to 'New Event', new_event_path, class: 'btn btn-outline-secondary ms-auto'

  %table.table
    %thead
      %tr
        %th Name
        %th Date
        %th Description
        %th Category
        %th Approved
        %th
    %tbody
      - @events.each do |event|
        %tr
          %td= event.name
          %td= event.time_of_event
          %td= event.decorate.display_description
          %td= event.category
          %td= event.approved
          %td
            .btn-toolbar.float-end
              = link_to 'Show', event, class: 'btn btn-outline-secondary btn-sm'
              = link_to 'Edit', edit_event_path(event), class: 'btn btn-outline-secondary ms-1 btn-sm'
              = link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger ms-1 btn-sm'