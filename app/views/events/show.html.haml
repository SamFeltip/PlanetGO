.event-header{:class => @event.category}
  .content
    %h1
      =@event.name
    %h2
      =@event.time_of_event
  = image_pack_tag "event_images/#{@event.category}.png", id: "event-image"

.event-body
  .d-flex.justify-content-between
    .reacts.d-flex
      .likes.me-2
        = link_to like_event_path(@event), class: 'btn btn-outline-primary', title: 'Like this Event', method: :patch, data: { remote: true } do
          %i.like_icon{:class => @event.like_icon(current_user)}
            %span.event_like{:id => "event_#{@event.id}"}=@event.display_likes(current_user, compressed=true)

    .end.d-flex

      .dropdown.me-1
        %a.btn.btn-outline-secondary.dropdown-toggle{:href => "#", "role" => "button", "data-bs-toggle" => "dropdown", "data-target" => "#"}
          %i.bi-share
          %b.caret
        %ol.lg-icon.dropdown-menu.p-3.ms-2.text-center{"role" => "menu"}
          %li
            %a{:href => "#link1"}
              %i.bi-link
          %li
            %a{:href => "#link1"}
              %i.bi-instagram
          %li
            %a{:href => "#link2"}
              %i.bi-facebook
          %li
            %a{:href => "#link3"}
              %i.bi-twitter
          %li


      -#%a.btn.btn-outline-primary{href: "https://www.instagram.com"}
      -#  %i.bi-instagram


      - if current_user.admin?
        %a{href: edit_event_path(@event), class: 'btn btn-outline-secondary ms-1' }
          %i.bi-gear
        -#%a{href: event_path(@event), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger ms-1' }
        -#  %i.bi-trash

  %hr
  #event-info
    #event-tags.pb-3
      - @event.tags.each do |tag|
        .btn.btn-secondary.me-1
          %i.bi-tag
          %span
            =tag

    .d-flex.flex-column.flex-md-row
      .card.p-3.mb-3.col-md-9

        %h2
          Description
        %p
          =@event.description

        %h2
          Time of Event
        %p
          =@event.time_of_event
        %h2
          Creator
        %p
          %a{href: user_path(@event.user)}
            =@event.user
      .card.p-3.mb-3.col-md-3
        %h2
          Location
        %p
          =@event.display_location

  %hr

  %h2.text-center
    More Events Like This
    %i.bi-chevron-right.bold

  .horizontal-scroll
    - @users_events.each do |event|
      %a.horizontal-card{href: event_path(event)}
        = image_pack_tag "event_images/#{event.category}.png", class: "rounded", width: "100%"
        %p.text-center.pt-3.mx-3= event.name

    %a.horizontal-card.d-flex.justify-content-center.align-items-center.flex-column{href: events_path}

      %i.bi-calendar-event.xl-icon
      %p
        Find more events here

