- additional_stylesheet 'events'

.event-header{:class => Category.find(@event.category_id).name.downcase }
  .content
    %h1
      =@event.name
    %h2
      =@event.time_of_event
  = image_pack_tag @event.image_path, id: "event-image", width: "100px"

.event-body
  .d-flex.justify-content-between
    .reacts.d-flex
      .likes.me-2
        = link_to like_event_path(@event), class: 'btn btn-outline-primary', title: 'Like this Event', method: :patch, data: { remote: true } do
          %i.like_icon{:class => @event.like_icon(@event_liked)}
            %span.event_like{:id => "event_#{@event.id}"}=@event.likes(current_user, compressed: true, current_user_liked: @event_liked)

    .end.d-flex

      .dropdown.me-1
        %a.btn.btn-outline-secondary.dropdown-toggle{:href => "#", "role" => "button", "data-bs-toggle" => "dropdown", "data-target" => "#"}
          %i.bi-share
          %b.caret
        %ol.lg-icon.dropdown-menu.p-3.ms-2.text-center{"role" => "menu"}
          %li
            %a{:href => "#link1"}
              %i.bi-link
          %li
            %a{:href => "#link1"}
              %i.bi-instagram
          %li
            %a{:href => "#link2"}
              %i.bi-facebook
          %li
            %a{:href => "#link3"}
              %i.bi-twitter
          %li


      -#%a.btn.btn-outline-primary{href: "https://www.instagram.com"}
      -#  %i.bi-instagram


      - if current_user.admin? && !current_user.suspended

        %a#event_settings{href: edit_event_path(@event), class: 'btn btn-outline-secondary ms-1' }
          %i.bi-gear
        -#%a{href: event_path(@event), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger ms-1' }
        -#  %i.bi-trash

  %hr
  #event-info
    .card
      .card-header
        %h2
          Description
      .card-body
        %p
          =@event.description
        %p
          %em
            =@event.category.name
        %h2
          Time of Event
        %p
          =@event.time_of_event
        %h2
          Creator
        %p
          %a{href: user_path(@event.user)}
            =@event.user
    .card
      .card-header
        %h2
          Location
      .card-body
        %img{ src: @event.decorate.map_image }
        %p.mt-3.text-center
          =@event.address
      

  %hr

  %h2.text-center
    More Events Like This
    %i.bi-chevron-right.bold


  .horizontal-scroll
    - @more_events.each do |event|
      = render 'event_card_small', event: event, render_params: {}

    %a.horizontal-card.d-flex.justify-content-center.align-items-center.flex-column.event-card-small.card{href: events_path}

      %i.bi-calendar-event.xl-icon
      %p
        Find more events here
