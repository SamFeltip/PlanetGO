.row.justify-content-center
  .col-sm-8.col-lg-6
    .card
      .card-header
        User details
      .card-body
        %dl.row.mb-0
          %dt.col-md-3 Email:
          %dd.col-md-9= @user.email
          %dt.col-md-3 Role:
          %dd.col-md-9= @user.role
          %dt.col-md-3 Last Sign In:
          %dd.col-md-9= @user.last_sign_in_at
      .card-footer.d-flex
        - if @user != current_user
          = link_to 'Edit', edit_user_path(@user), class: 'btn btn-link'
        = link_to 'Back', users_path, class: 'btn btn-link ms-auto'
