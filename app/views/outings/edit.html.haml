.row.justify-content-center
  .col-sm-8.col-lg-6
    .card
      -# frozen_string_literal: true
      = simple_form_for(@outing) do |f|
        .card-body
          = f.input :name, wrapper_html: { class: 'mb-3' }

          = f.input :description, wrapper_html: { class: 'mb-3' }
          = f.input :outing_type, wrapper_html: { class: 'mb-3' }, collection: Outing.outing_types.keys

        .card-footer.d-flex.justify-content-between
          = link_to outing_path(@outing), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do
            %i.bi-trash
          %span
            %button.btn.btn-primary{ type: 'submit' }
              Save
            = link_to set_details_outing_path(@outing), class: 'btn btn-secondary me-2' do
              Set Details
              %i.bi-chevron-right

